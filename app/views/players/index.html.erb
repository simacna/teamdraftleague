<div class="bios">

	<div class="pagetitle">
		<h1>Player Bios</h1>
	</div>

	<!-- Iterates over each team and displays the team name, player names, and player bios -->
	<% @teams.each do |team| %>
		<h2><%= team.name %></h2>
		<% team.players.each do |player| %>
			<a href="/players/<%= player.id %>"><h3><%= player.name %></h3></a>
			<p><%= player.bio %></p>
			<% if logged_in? && current_user.admin %><a href="/players/<%= player.id %>/edit">Edit</a><% end %>
		<% end %>
	<% end %>

</div>