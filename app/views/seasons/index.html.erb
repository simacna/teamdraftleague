<div class="teams">

	<div class="pagetitle">
		<h1>Seasons</h1>
	</div>

	<!-- Iterates over each season and lists its name -->
	<% @seasons.each do |season| %>
		<p><a href="/seasons/<%= season.id %>">
      Season <%= season.number %> 
      <% if season.name != nil %>
        (<%= season.name %>)
      <% end %>
    </a></p>
	<% end %>

</div>